@model IEnumerable<RealTimeCommission>

@if (Model != null)
{
    if (Model.Count() > 0)
    {
        <div class="text-center">
            <small class="text-muted text-uppercase">@Resources.Common.CurrentRank</small>
            <div class="lead">@Model.First().PaidRank.RankDescription</div>
        </div>

                            <hr />

        foreach (var commission in Model)
        {
            <dl class="card-metric dl-metric ">
                <dt>@commission.Period.PeriodDescription</dt>
                @*<dd>@commission.Total.ToString("C")</dd>*@
                <dd>@Format.Currency(commission.Total, commission.CurrencyCode)</dd>
            </dl>
        }
    }
}
else
{
    <p>@Resources.Common.CardFailedToLoad</p>
}