@* Add alert modal.*@
<div id="logInAlertMenuAdd" class="modal fade logInAlertMenuAdd" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="space-20"></div>
                    <div class="row">
                        <h4 class="col-sm-1">@Resources.Common.Title</h4>
                        <div class="col-sm-10 col-sm-offset-1">
                            <textarea class="form-control logInAlertContentDescription" id="logInAlertContentDescription"></textarea>
                        </div>
                    </div>
                    <div class="space-20"></div>
                    <div class="row">
                        <h4 class="col-sm-1">@Resources.Common.Message</h4>
                        <div class="col-sm-10 col-sm-offset-1">
                            <textarea class="form-control" id="logInAlertContent"></textarea>
                        </div>
                    </div>
                    <div class="space-20"></div>
                    <div class="row">
                        <h4 class="col-sm-2">@Resources.Common.StartDate</h4>
                        <div class="col-sm-3">
                            <input class="form-control PostDate" id="publishDate">
                        </div>
                        <h4 class="col-sm-2">@Resources.Common.EndDate</h4>
                        <div class="col-sm-3">
                            <input class="form-control PostDate" id="expirationDate">
                        </div>
                    </div>
                    <div class="space-20"></div>
                    <div class="row">
                        <h4 class="col-sm-2">@Resources.Common.Market</h4>
                        <div class="col-sm-6">
                            <div id="Keywords">
                                <select id="logInAlertLanguage" class="form-control" multiple="multiple" name="Language"></select>
                            </div>
                        </div>
                    </div>
                    <div class="space-20"></div>
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="text-center">
                                <button class="btn btn-default fullwidth" data-role="viewLogInAlerts">@Resources.Common.ViewAlertsList</button>
                            </div>
                        </div>
                        <div class="col-sm-2 col-sm-offset-6">
                            <div class="text-center">
                                <button class="btn btn-primary fullwidth" data-role="createLogInAlert" data-key="">@Resources.Common.Save</button>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="text-center">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">@Resources.Common.Close</button>
                            </div>
                        </div>
                    </div>
                    <div class="space-25"></div>
                </div>
            </div>
        </div>
    </div>
</div>