@* Delete Alert Modal*@
<div class="modal fade" id="deleteAlert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">@Resources.Common.Close</span></button>
                <h4 class="modal-title" id="myModalLabel">@Resources.Common.DeleteAlert</h4>
            </div>
            <div class="modal-body">
                @Resources.Common.DeleteResourceQuestion
            </div>
            <!-- hidden value -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Common.No</button>
                <button type="button" id="deleteAlertConfirmation" data-id="" class="btn btn-info">@Resources.Common.Yes</button>
            </div>
        </div>
    </div>
</div>